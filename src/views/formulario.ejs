<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Película</title>
    <link
      href="https://fonts.googleapis.com/css?family=Dosis:400,700"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styleFront.css" />
</head>
<body>

    <h1 class="moviesAddTitulo"></h1>
    <article>
        <a href="/"> Volver al home </a>
    </article>
    <form class="card formulario form" id="formulario" method="POST" action="/">
       
        <input type="hidden" name="id">
        <div>        
            <label for="title">Título </label>
            <% if (typeof pelicula !== 'undefined') { %>
                <p><input type="text" name="title" id="title" required value="<%= pelicula.data.title %>"></p>
            <% } else{ %> 
            <p><input type="text" name="title" id="title" required ></p>
            <% } %> 
        </div>
        
        <div>
            <label for="rating">Calificación </label>
            <% if (typeof pelicula !== 'undefined') { %>
            <p><input type="number" name="rating" id="rating" required value="<%= pelicula.data.rating %>"></p>
            <% } else { %>    
            <p><input type="number" name="rating" id="rating" required></p>
            <% } %> 
        </div>
        
        <div>
        <label for="awards">Premios </label>
        <% if (typeof pelicula !== 'undefined') { %>
        <p><input type="number" name="awards" id="awards" required value="<%= pelicula.data.awards %>"></p>
        <% } else { %> 
        <p><input type="number" name="awards" id="awards" required></p>
        <% } %> 
        </div>
        
        <div>
            <label for="release_date">Fecha de creación </label>
            <% if (typeof pelicula !== 'undefined') { %>
            <p><input type="date" name="release_date" id="release_date" required value="<%= pelicula.data.release_date.slice(0,10) %>"></p>
            <% } else { %> 
            <p><input type="date" name="release_date" id="release_date" required></p>
            <% } %> 
        </div>
        <div>
            <label for="length">Duración </label>
            <% if (typeof pelicula !== 'undefined') { %>
            <p><input type="number" name="length" id="length" required value="<%= pelicula.data.length %>"></p>
            <% } else { %>   
            <p><input type="number" name="length" id="length" required></p>
            <% } %> 
        </div>

        <ul class="errores"></ul>
        
        <br>
        <div class="action">
            <button class="botonAgregar" id="editButton">Editar</button>
            <button class="botonAgregar" id="createButton">Crear</button>
            <button class="botonBorrar">Eliminar</button>
        </div>
    </form>
    <script src="/js/moviesAddValidation.js"></script>
    <script src="/js/formulario.js"></script>

    
        
    </script>
</body>
</html>